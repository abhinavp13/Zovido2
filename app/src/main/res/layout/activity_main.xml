<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fdfdfd"
    tools:context=".activities.MainActivity">


    <ImageView
        android:id="@+id/gif_animation_view"
        android:layout_marginTop="88dp"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:src="@drawable/frame_1"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:paddingTop= "16dp"
        android:gravity="center"
        android:textSize="32sp"
        android:text = "Z Ø V I D Ö"
        android:layout_below="@+id/gif_animation_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:paddingTop="8dp"
        android:textSize="14sp"
        android:text = "Your Call Details Saving App"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_below="@+id/textView7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linear_layout_forward"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/welcome_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Welcome !"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <com.pabhinav.zovido.customviews.CustomFloatingActionButton
                android:id="@+id/fab_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:layout_margin="16dp"
                app:backgroundTint="@color/colorPrimary"
                android:onClick="nextClicked"
                android:src="@drawable/ic_arrow_forward_white_24dp"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
