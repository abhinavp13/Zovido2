<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:paddingLeft = "48dp"
        android:paddingStart = "48dp"
        android:paddingRight = "48dp"
        android:paddingEnd = "48dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_height="240dp"
        android:src="@drawable/phone_frame_8"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/flicker_tab_two" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor= "@android:color/black"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text = "Recent And Saved Logs"
        android:layout_below="@+id/flicker_tab_two"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="14dp"
        android:layout_marginTop="16dp"
        android:lineSpacingMultiplier="1.5"
        android:text = "Zovido saves your recent logs with some additional info, only when asked to do so."
        android:layout_below="@+id/textView8"
        android:layout_marginBottom="56dp" />



</RelativeLayout>